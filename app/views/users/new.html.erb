<script type="text/javascript">
$(document).ready(function(){
  var Privileges = jQuery('#userType');
  var select = this.value;
  if(Privileges.val() == 'Physician')
  {
      $('#physician').show();
      $('#hospital').hide();
      $('#employee').hide();
  }
  else if(Privileges.val() == 'Hospital')
  {
      $('#physician').hide(); // hide div if value is not "custom"
      $('#hospital').show();
      $('#employee').hide();
  }
  else
  {
      $('#physician').hide();
      $('#hospital').hide();
      $('#employee').show();
  }
  Privileges.change(function () {

    if ($(this).val() == 'Physician') {
        $('#physician').show();
        $('#hospital').hide();
        $('#employee').hide();
      }
      else if ($(this).val() == 'Hospital') {
        $('#physician').hide(); // hide div if value is not "custom"
        $('#hospital').show();
        $('#employee').hide();
      }
      else {
        $('#physician').hide();
        $('#hospital').hide();
        $('#employee').show();
      }
  });
});
</script>



