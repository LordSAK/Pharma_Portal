	&nbsp;&nbsp;&nbsp;<b style="font-size:14px">Spend Activity: </b><p>&nbsp;&nbsp;&nbsp;<%= @spends.SpendActivity %></p>
	&nbsp;&nbsp;&nbsp;<b style="font-size:14px">Spend Detail: </b><p>&nbsp;&nbsp;&nbsp;<%= @spends.SpendDetail %></p>
	&nbsp;&nbsp;&nbsp;<b style="font-size:14px">Business Purpose: </b><p>&nbsp;&nbsp;&nbsp;<%= @spends.BusinessPurpose %></p>
	&nbsp;&nbsp;&nbsp;<b style="font-size:14px">Spend Description: </b><p>&nbsp;&nbsp;&nbsp;<%= @spends.spend_description %></p>
	&nbsp;&nbsp;&nbsp;<b style="font-size:14px">Spend Date: </b><p>&nbsp;&nbsp;&nbsp;<% if !@spends.Date.nil? %><%= @spends.Date.to_time.strftime('%b %d,%Y') %><% end %></p>
	&nbsp;&nbsp;&nbsp;<b style="font-size:14px">Payment Date: </b><p>&nbsp;&nbsp;&nbsp;<%= @spends.payment_date %></p>
	&nbsp;&nbsp;&nbsp;<b style="font-size:14px">Source System: </b><p>&nbsp;&nbsp;&nbsp;<%= @spends.source_system %></p>
	&nbsp;&nbsp;&nbsp;<b style="font-size:14px">Source Company: </b><p>&nbsp;&nbsp;&nbsp;<%= @spends.source_company %></p>
</div>

